<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ModernPOSActivity">

    <TextView
        android:id="@+id/amount_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:gravity="start"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="42sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Token Display Container -->
    <ScrollView
        android:id="@+id/token_scroll_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/white"
        android:visibility="gone"
        android:minHeight="120dp"
        android:maxHeight="240dp"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_display">

        <TextView
            android:id="@+id/token_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="start"
            android:textIsSelectable="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="monospace" />
    </ScrollView>

    <!-- Token Action Buttons Container -->
    <LinearLayout
        android:id="@+id/token_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/token_scroll_container">

        <!-- First row of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/copy_token_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Copy Token"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_content_copy"
                android:drawablePadding="8dp"
                app:strokeColor="@color/keypadButtonBorder"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/open_with_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Open With"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_open_with"
                android:drawablePadding="8dp"
                app:strokeColor="@color/keypadButtonBorder"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <!-- Second row - Reset button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="New Transaction"
            android:textSize="16sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:strokeColor="@color/keypadButtonBorder"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- Input Mode Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_mode_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_display">

        <!-- Keypad -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/keypad_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <GridLayout
                android:id="@+id/keypad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="4"
                android:useDefaultMargins="true">
            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/charge_button_background"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/navigationBarBackground"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Top Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>

            <!-- Navigation Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_top_up"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_top_up"
                    android:tint="@color/navigationIconTint"
                    android:contentDescription="Top Up"
                    android:padding="16dp"/>

                <ImageButton
                    android:id="@+id/action_balance_check"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_balance_check"
                    android:tint="@color/navigationIconTint"
                    android:contentDescription="Check Balance"
                    android:padding="16dp"/>

                <ImageButton
                    android:id="@+id/action_history"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_history"
                    android:tint="@color/navigationIconTint"
                    android:contentDescription="Transaction History"
                    android:padding="16dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
