<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_bg_white"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/withdraw_token_toolbar_back"
            android:src="@drawable/ic_chevron_back"
            android:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_token_title"
            android:textAppearance="@style/Text.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Balance Hero Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balance_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/color_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_token_balance_label"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="â‚¿0"
                        android:textAppearance="@style/Text.DisplayAmount"
                        android:textColor="@color/color_text_primary"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mint_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/withdraw_token_mint_name_label"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_tertiary"
                        android:textSize="13sp"
                        android:drawableStart="@drawable/ic_cashu_symbol"
                        android:drawablePadding="6dp"
                        android:drawableTint="@color/color_text_tertiary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/color_info_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/color_info_icon"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/withdraw_token_info_text"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_info_text"
                        android:textSize="13sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:text="@string/withdraw_section_amount"
                android:textAppearance="@style/Text.SectionHeader" />

            <!-- Amount Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/amount_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/color_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Amount Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_token_amount_label"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/amount_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/withdraw_token_amount_hint"
                            android:inputType="number"
                            android:maxLength="12"
                            android:textAppearance="@style/Text.DisplayAmount"
                            android:textColor="@color/color_text_primary"
                            android:textColorHint="@color/color_text_tertiary"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sats"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <!-- Quick Amount Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btn_amount_100"
                            style="@style/Widget.Button.QuickAmount"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="100" />

                        <Button
                            android:id="@+id/btn_amount_500"
                            style="@style/Widget.Button.QuickAmount"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="500" />

                        <Button
                            android:id="@+id/btn_amount_1000"
                            style="@style/Widget.Button.QuickAmount"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="1K" />

                        <Button
                            android:id="@+id/btn_amount_max"
                            style="@style/Widget.Button.QuickAmount"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="@string/withdraw_token_max" />

                    </LinearLayout>

                    <!-- Withdraw Button -->
                    <Button
                        android:id="@+id/withdraw_button"
                        style="@style/Widget.Button.Primary.Green"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="20dp"
                        android:enabled="false"
                        android:alpha="0.5"
                        android:text="@string/withdraw_token_button"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/color_primary" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
