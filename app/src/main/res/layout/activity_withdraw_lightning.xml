<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_bg_white"
        android:elevation="1dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/withdraw_lightning_toolbar_back"
            android:src="@drawable/ic_chevron_back"
            app:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_lightning_title"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_text_primary"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:background="@color/color_bg_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingBottom="100dp">

            <!-- Balance Hero Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balance_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/color_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_lightning_balance_label"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="â‚¿0"
                        android:textAppearance="@style/Text.DisplayAmount"
                        android:textColor="@color/color_text_primary"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mint_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/withdraw_lightning_mint_name_label"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_tertiary"
                        android:textSize="13sp"
                        android:drawableStart="@drawable/ic_lightning_bolt"
                        android:drawablePadding="6dp"
                        android:drawableTint="@color/color_text_tertiary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/tabs_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_input_pill"
                android:padding="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_lightning"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_segment_tab_selected"
                    android:gravity="center"
                    android:text="@string/withdraw_tab_lightning"
                    android:textColor="@color/color_text_primary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tab_cashu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/withdraw_tab_cashu"
                    android:textColor="@color/color_text_tertiary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Lightning Container -->
            <LinearLayout
                android:id="@+id/lightning_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/withdraw_section_send_to"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textColor="@color/color_text_secondary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.03" />

                <!-- Invoice Card -->
                <com.electricdreams.numo.ui.components.WithdrawInvoiceCard
                    android:id="@+id/invoice_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp" />

                <!-- OR Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="@string/common_or"
                        android:textAppearance="@style/Text.Caption"
                        android:textColor="@color/color_text_tertiary"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/color_divider" />

                </LinearLayout>

                <!-- Address Card -->
                <com.electricdreams.numo.ui.components.WithdrawAddressCard
                    android:id="@+id/address_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp" />

            </LinearLayout>

            <!-- Cashu Token Container -->
            <LinearLayout
                android:id="@+id/cashu_token_options_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/withdraw_tab_cashu"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:textColor="@color/color_text_secondary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.03" />

                <!-- Amount Input Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cashu_input_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/color_bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_accent_light">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_qr_scan"
                                    app:tint="@color/color_primary" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/withdraw_cashu_amount_card_title"
                                    android:textColor="@color/color_text_primary"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="17sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/withdraw_cashu_amount_card_subtitle"
                                    android:textAppearance="@style/Text.Caption"
                                    android:textColor="@color/color_text_secondary"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Amount Input -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/withdraw_lightning_amount_label"
                            android:textAppearance="@style/Text.Caption"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <EditText
                            android:id="@+id/cashu_amount_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_input_pill"
                            android:hint="@string/withdraw_amount_placeholder"
                            android:inputType="number"
                            android:minHeight="52dp"
                            android:padding="14dp"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary"
                            android:textColorHint="@color/color_text_tertiary"
                            android:textSize="15sp" />

                        <!-- Create Button -->
                        <Button
                            android:id="@+id/create_token_button"
                            style="@style/Widget.Button.Primary.Green"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/withdraw_cashu_create_button"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:alpha="0.5"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Result Card -->
                 <com.google.android.material.card.MaterialCardView
                    android:id="@+id/token_result_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="@color/color_bg_card"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/token_qr_code"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:id="@+id/token_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:background="@drawable/bg_input_pill"
                            android:padding="12dp"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:textColor="@color/color_text_secondary"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copy_token_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/withdraw_cashu_copy_token"
                            app:cornerRadius="28dp"/>

                    </LinearLayout>
                 </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/color_primary" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>